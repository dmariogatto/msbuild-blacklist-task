<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <_TaskAssembly>$(MSBuildThisFileDirectory)..\build\netstandard2.0\Cats.Build.Blacklist.dll</_TaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="Cats.Build.Blacklist.CheckLibrariesTask" AssemblyFile="$(_TaskAssembly)" />

  <Target Name="CheckBlacklistedPackages" AfterTargets="BeforeBuild">
    <Cats.Build.Blacklist.CheckLibrariesTask ProjectAssetsFilePath="$(MSBuildProjectDirectory)\obj\project.assets.json" PackageBlacklistFilePath="$(MSBuildProjectDirectory)\package.blacklist" ProjectBlacklistFilePath="$(MSBuildProjectDirectory)\project.blacklist" />
  </Target>
</Project>
